{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "outDir": "./build/",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },

  "exclude": [
    "node_modules/*",
    "build/*",
    "docs/*"
  ],
  "include": ["src/**/*"]
}
